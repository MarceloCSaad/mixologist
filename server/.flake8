[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,build,dist,venv
max-complexity = 10
select = C,E,F,W,B,B950

# Explanation:
# max-line-length: 88 (matches Black formatter default)
# extend-ignore: E203, W503 (recommended with Black)
# exclude: common folders to skip
# max-complexity: 10 (warns on overly complex functions)
# select: includes bugbear (B) and B950 (line length warning)
